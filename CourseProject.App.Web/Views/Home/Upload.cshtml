@model CourseProject.App.Web.Models.SongViewModel

@{
    ViewData["Title"] = "Upload File";
}


<h3>Select a file to upload</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="file" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Add Song" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

